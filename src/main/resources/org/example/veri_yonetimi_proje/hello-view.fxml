<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.veri_yonetimi_proje.Controllers.HelloController">

    <!-- Üst Başlık -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="ÖĞRENCİ KAYIT SİSTEMİ" />
        </HBox>
    </top>

    <!-- Sol Menü -->
    <left>
        <VBox prefHeight="549.0" prefWidth="225.0" spacing="10" style="-fx-background-color: #ECF0F1;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button onAction="#onYeniOgrenciEkle" text="Yeni Öğrenci Ekle" />
            <Button onAction="#onOgrenciGuncelle" text="Öğrenci Güncelle" />
            <Button onAction="#onOgrenciSil" text="Öğrenci Sil" />
            <Button onAction="#onTumListele" text="Tüm Öğrencileri Listele" />
            <Button onAction="#onNumarayaGoreAra" text="Numaraya Göre Ara" />
            <Button onAction="#onAdaGoreAra" text="Ada Göre Ara" />
            <Button onAction="#onHashGoster" text="Hash Tablosunu Göster" />
         <Accordion>
           <panes>
             <TitledPane animated="false" text="ogr noya göre sıralama">
               <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <children>
                           <RadioButton fx:id="Radio_bubble" layoutX="14.0" layoutY="20.0" mnemonicParsing="false" text="Bubble sort algorithm" />
                           <RadioButton fx:id="Radio_marge" layoutX="14.0" layoutY="44.0" mnemonicParsing="false" text="marge sort algorithm" />
                           <RadioButton fx:id="Radio_Insertion" layoutX="14.0" layoutY="72.0" mnemonicParsing="false" text="Insertion sort algorithm" />
                           <RadioButton fx:id="Radio_selection" layoutX="14.0" layoutY="99.0" mnemonicParsing="false" text="Selection sort algorithm" />
                           <Button layoutX="123.0" layoutY="133.0" mnemonicParsing="false" onAction="#ogr_no_sirala_hash" prefHeight="7.0" prefWidth="61.0" text="START" />
                        </children>
                     </AnchorPane>
               </content>
             </TitledPane>
             <TitledPane animated="false" text="bölüm sıralaması">
               <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <children>
                           <RadioButton fx:id="Radio_Bolum_bubble" layoutX="12.0" layoutY="101.0" mnemonicParsing="false" text="Bubble sort algorithm" />
                           <RadioButton fx:id="Radio_Bolum_marge" layoutX="14.0" layoutY="72.0" mnemonicParsing="false" text="marge sort algorithm" />
                           <RadioButton fx:id="Radio_Bolum_Insertion" layoutX="15.0" layoutY="42.0" mnemonicParsing="false" text="Insertion sort algorithm" />
                           <RadioButton fx:id="Radio_Bolum_selection" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="Selection sort algorithm" />
                           <Button layoutX="118.0" layoutY="141.0" mnemonicParsing="false" onAction="#bolum_sirala_hash" prefHeight="7.0" prefWidth="61.0" text="START" />
                        </children></AnchorPane>
               </content>
             </TitledPane>
               <TitledPane animated="false" text="Sınıf sıralaması">
                  <content>
                     <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <children>
                           <RadioButton fx:id="Radio_Sinif_bubble" layoutX="12.0" layoutY="101.0" mnemonicParsing="false" text="Bubble sort algorithm" />
                           <RadioButton fx:id="Radio_Sinif_marge" layoutX="14.0" layoutY="72.0" mnemonicParsing="false" text="marge sort algorithm" />
                           <RadioButton fx:id="Radio_Sinif_Insertion" layoutX="15.0" layoutY="42.0" mnemonicParsing="false" text="Insertion sort algorithm" />
                           <RadioButton fx:id="Radio_Sinif_selection" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="Selection sort algorithm" />
                           <Button layoutX="118.0" layoutY="141.0" mnemonicParsing="false" onAction="#sinif_sirala_hash" prefHeight="7.0" prefWidth="61.0" text="START" />
                        </children>
                     </AnchorPane>
                  </content>
               </TitledPane>
           </panes>
         </Accordion>
        </VBox>
    </left>

    <!-- Orta Kısım -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <HBox spacing="10">
                <Label text="Ara:" />
                <TextField fx:id="txtArama" prefWidth="200" promptText="Öğrenci Adı veya Numarası" />
                <Button onAction="#onAraTikla" text="Ara" />
            </HBox>

            <TableView fx:id="tblOgrenciler" prefHeight="500">
                <columns>
                    <TableColumn fx:id="colNo" prefWidth="80" text="No" />
                    <TableColumn fx:id="colAd" prefWidth="120" text="Ad" />
                    <TableColumn fx:id="colSoyad" prefWidth="120" text="Soyad" />
                    <TableColumn fx:id="colGano" prefWidth="80" text="GANO" />
                    <TableColumn fx:id="colSinif" prefWidth="80" text="Sınıf" />
                    <TableColumn fx:id="colBolumSira" prefWidth="112.0" text="Bölüm Sırası" />
                    <TableColumn fx:id="colSinifSira" prefWidth="112.0" text="Sınıf Sırası" />
                    <TableColumn fx:id="colCinsiyet" prefWidth="68.0" text="Cinsiyet" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
